<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyCelebrityApplication.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="30" >

            <Image
                x:Name="Celebrity"
                Source="chuck_norris.jpg" 
                HeightRequest="500" 
                HorizontalOptions="Center" />

            <Label
                Text="WELCOME TO CELEBPEDIA"
                FontSize="Large"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="LightGreen" />

            <Label
                Text="All you need to know about your favorite celebrity"
                FontSize="Medium"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BackgroundColor="LightPink" />

            <SearchBar
                x:Name="searchBar" 
                Text="" 
                Placeholder="SEARCH CELEBRITY" 
                VerticalOptions="Center"
                HorizontalOptions="Center"
                SearchButtonPressed="OnSearchClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
